<!DOCTYPE html>
<html>
<head>
  <title>Blog Post Lists</title>
  <link rel="stylesheet" href="/path/to/your/stylesheet.css">
  <style>
    /* Add your custom CSS styles here */
    body {
      font-family: Arial, sans-serif;
      background-color: #f2f2f2;
      padding: 20px;
    }

    h1 {
      color: #333;
      font-size: 30px;
      text-align: center;
      margin-bottom: 30px;
    }

    .post-list {
      list-style: none;
      margin: 0;
      padding: 0;
    }

    .post-item {
      background-color: #fff;
      border-radius: 5px;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
      padding: 20px;
      margin-bottom: 20px;
    }

    .post-title {
      font-size: 24px;
      font-weight: bold;
      margin-bottom: 10px;
    }

    .post-content {
      font-size: 18px;
      line-height: 1.5;
    }
  </style>
</head>
<body>
  <h1>Blog Post Lists</h1>
  <ul class="post-list">
    <% posts.forEach((post) => { %>
      <li class="post-item">
        <h2 class="post-title"><%= post.title %></h2>
        <p class="post-content"><%= post.content %></p>
        <p class="post-tags"><%= post.tags %></p>
        <form action="/posts/<%= post._id %>" method="put">
          <input type="hidden" name="_method" value="PUT"> <!-- Add this hidden field to specify the method as PUT -->
          <button type="submit">Edit</button>
        </form>
        <form action="/posts/<%= post._id %>" method="delete">
          <input type="hidden" name="_method" value="DELETE"> <!-- Add this hidden field to specify the method as DELETE -->
          <button type="submit">Delete</button>
        </form>
      </li>
    <% }); %>
  </ul>
</body>
</html>
